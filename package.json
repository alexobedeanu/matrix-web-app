{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "setup:dev": "bash scripts/setup-dev.sh",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "vercel-build": "prisma generate && prisma db push --accept-data-loss && next build --turbopack",
    "vercel-docker-build": "prisma generate && next build --turbopack",
    "postinstall": "prisma generate",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "docker:build": "docker build -t cyberpunk-app:latest .",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "1.0.7",
    "@prisma/client": "6.14.0",
    "@types/bcryptjs": "2.4.6",
    "@types/pg": "^8.15.5",
    "bcryptjs": "3.0.2",
    "next": "15.5.0",
    "next-auth": "4.24.11",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@tailwindcss/postcss": "^4.0.0-alpha.14",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "20.14.12",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "eslint": "9.9.1",
    "eslint-config-next": "15.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prisma": "6.14.0",
    "tailwindcss": "^4.0.0-alpha.14",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
